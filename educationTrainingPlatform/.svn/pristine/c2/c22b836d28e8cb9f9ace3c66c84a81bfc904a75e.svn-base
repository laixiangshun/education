<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>index-front</title>
    <link href="../../style/bootstrap-3.3.7-dist/css/bootstrap.css" type="text/css" rel="stylesheet"/>
    <link href="../../style/css/mainPage.css" type="text/css" rel="stylesheet"/>
    <script src="../../jQuery/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="../../style/bootstrap-3.3.7-dist/js/bootstrap.js" type="text/javascript"></script>
    <script src="../../jQuery/mcalendar.js"></script>
    <style type="text/css">
        .nav-btn{
            width: 100%;
            text-align: center;
            display: block;
            background-color: #ffffff;
            color: #000000;
        }
        .nav-btn:hover{
            background-color: rgba(204,204,204,0.3);
        }
        h1{
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div >
        <div class="header" id="header">
        </div>
        <div class="main-body">
            <div class="main-body-left" id="sidebar">
                <!--导航-->
                <button url="courseNotice/courseNotice.html"  class="btn nav-btn" onclick="navClick(this)" value="課程公告">課程公告</button>
                <button url="roomReservation/roomReservation.html" class="btn nav-btn" onclick="navClick(this)" value="會議室/教室預約">會議室/教室預約</button>
                <button class="btn nav-btn" onclick="navClick(this)" value="課程報名">課程報名</button>
                <button class="btn nav-btn" onclick="navClick(this)" value="個人課程管理">個人課程管理</button>
                <button url="courseDiscuss/courseDiscuss.html" class="btn nav-btn" onclick="navClick(this)" value="課程討論版">課程討論版</button>
                <button class="btn nav-btn" onclick="navClick(this)" value="講師資訊">講師資訊</button>
                <button class="btn nav-btn" onclick="navClick(this)" value="登出">登出</button>
                <!--导航-->
            </div>
            <div class="main-body-right" id="content">
            </div>
        </div>
        <div class="footer" id="footer">
        </div>
    </div>
    <script type="text/javascript">
        $(function(){
            /* 加载header、footer、welcome页面*/
            $.get("../tile/header.html",{"ajaxTime": new Date()}, function (data) {
                //alert(data);
                $("#header").html(data);
            });
            $.get("../tile/welcome.html",{"ajaxTime": new Date()}, function (data) {
                $("#content").html(data);
            });
            $.get("../tile/footer.html",{"ajaxTime": new Date()}, function (data) {
                $("#footer").html(data);
            });
            /* 加载header、footer、sidebar */
            footerPosition();//footer自适应页面高度，始终位于页面底部
        });

        function footerPosition() {
            /* footer自适应页面高度，始终位于页面底部 */
            var winHeight = window.innerHeight;//可视窗口高度，不包括浏览器顶部工具栏
            var headerHeight = $("#header").height();
            var footerHeight = $("#footer").height();
            //alert(headerHeight + "," + footerHeight);
            $(".main-body").css("minHeight", winHeight - headerHeight - footerHeight -10);
            /* footer自适应页面高度，始终位于页面底部 */
        }

        function navClick(target) {
            $("#sidebar button").css("backgroundColor", "#ffffff");
            $("#sidebar button").css("color", "#000000");
            $(target).css("backgroundColor", "#337AB7");
            $(target).css("color", "#ffffff");
            if(target.getAttribute("url")){
                //alert(target.getAttribute("url"));
                $("#content").load(target.getAttribute("url"));
            }
            else{
                $("#content").html("<h1>暫無子頁面！！！</h1>");
            }
        }
    </script>
</body>
</html>